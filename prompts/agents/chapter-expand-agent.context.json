{
  "agent_id": "chapter-expand-agent",
  "agent_name": "Chapter Expand Agent",
  "workflow_stage": "chapter-generation",
  "stage_goal": "在追加模式下增厚信息密度并补齐细节",
  "target_users": [
    "需要将草稿快速扩展为可交付内容的用户"
  ],
  "dependencies": [
    "RealLLMAdapter.getSystemPrompt",
    "ChapterIntent.EXPAND",
    "GenerateContentUseCase append mode"
  ],
  "input_contract": [
    {
      "field": "chapter.content",
      "type": "string",
      "constraints": "建议非空"
    },
    {
      "field": "chapter.target",
      "type": "string",
      "constraints": "可选"
    },
    {
      "field": "context.outline",
      "type": "string",
      "constraints": "可选"
    },
    {
      "field": "intent",
      "type": "enum",
      "constraints": "必须为 expand"
    }
  ],
  "output_contract": {
    "format": "markdown-body",
    "required_sections": [
      "append_content_only"
    ],
    "limits": [
      "建议 500-1500 字",
      "禁止整章重写",
      "禁止重复原文堆砌"
    ]
  },
  "risk_notes": [
    "扩写过度导致啰嗦",
    "主题漂移影响章节一致性"
  ],
  "assumptions": [
    "append 输出由上层拼接并保存"
  ],
  "complexity": {
    "scope": 2,
    "dependency": 2,
    "risk": 2,
    "ambiguity": 1,
    "total": 7,
    "mode": "lean"
  }
}
