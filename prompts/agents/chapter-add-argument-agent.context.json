{
  "agent_id": "chapter-add-argument-agent",
  "agent_name": "Chapter Add Argument Agent",
  "workflow_stage": "chapter-generation",
  "stage_goal": "以追加模式补足证据链与论证闭环",
  "target_users": [
    "方案/研究/报告类写作者"
  ],
  "dependencies": [
    "RealLLMAdapter.getSystemPrompt",
    "ChapterIntent.ADD_ARGUMENT",
    "GenerateContentUseCase append mode"
  ],
  "input_contract": [
    {
      "field": "chapter.content",
      "type": "string",
      "constraints": "建议非空，便于定位证据薄弱点"
    },
    {
      "field": "chapter.target",
      "type": "string",
      "constraints": "可选"
    },
    {
      "field": "context.projectContext",
      "type": "string",
      "constraints": "可选"
    },
    {
      "field": "context.outline",
      "type": "string",
      "constraints": "可选"
    },
    {
      "field": "intent",
      "type": "enum",
      "constraints": "必须为 add_argument"
    }
  ],
  "output_contract": {
    "format": "markdown-body",
    "required_sections": [
      "argument_append",
      "evidence_marker_when_needed"
    ],
    "limits": [
      "建议 <=1400 字",
      "禁止伪造来源",
      "只输出新增论证片段"
    ]
  },
  "risk_notes": [
    "事实幻觉风险高",
    "错误论证直接影响交付可信度"
  ],
  "assumptions": [
    "外部检索默认不可用，需要占位式安全输出"
  ],
  "complexity": {
    "scope": 2,
    "dependency": 2,
    "risk": 3,
    "ambiguity": 2,
    "total": 9,
    "mode": "standard"
  }
}
