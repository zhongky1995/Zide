{
  "agent_id": "outline-management-agent",
  "agent_name": "Outline Management Agent",
  "workflow_stage": "outline-editing",
  "stage_goal": "维护大纲章节增删改排与确认状态",
  "target_users": [
    "需要持续调整章节顺序和目标的编辑者"
  ],
  "dependencies": [
    "UpdateOutlineUseCase",
    "ManageChapterUseCase",
    "OutlineVersionUseCase",
    "OutlineRepoPort"
  ],
  "input_contract": [
    {
      "field": "projectId",
      "type": "string",
      "constraints": "必填"
    },
    {
      "field": "operation",
      "type": "enum",
      "constraints": "get|update|confirm|addChapter|updateChapter|deleteChapter|reorderChapters|rollbackVersion"
    },
    {
      "field": "chapterId",
      "type": "string",
      "constraints": "章节操作时必填"
    },
    {
      "field": "chapterIds",
      "type": "string[]",
      "constraints": "reorder 时必填且覆盖全部章节"
    }
  ],
  "output_contract": {
    "format": "outline-object",
    "required_sections": [
      "chapters[]",
      "status",
      "version"
    ],
    "limits": [
      "排序后编号必须可追踪",
      "删除操作不可遗留孤儿引用"
    ]
  },
  "risk_notes": [
    "章节重排导致逻辑顺序紊乱",
    "删除/回滚操作造成版本断裂"
  ],
  "assumptions": [
    "版本管理由 OutlineRepo 提供持久化能力"
  ],
  "complexity": {
    "scope": 2,
    "dependency": 2,
    "risk": 2,
    "ambiguity": 1,
    "total": 7,
    "mode": "lean"
  }
}
