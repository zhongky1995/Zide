{
  "agent_id": "chapter-simplify-agent",
  "agent_name": "Chapter Simplify Agent",
  "workflow_stage": "chapter-generation",
  "stage_goal": "以替换模式压缩冗余并保留核心信息",
  "target_users": [
    "需要面向更广读者交付内容的用户"
  ],
  "dependencies": [
    "RealLLMAdapter.getSystemPrompt",
    "ChapterIntent.SIMPLIFY",
    "GenerateContentUseCase replace mode"
  ],
  "input_contract": [
    {
      "field": "chapter.content",
      "type": "string",
      "constraints": "建议非空"
    },
    {
      "field": "context.glossary",
      "type": "string",
      "constraints": "可选"
    },
    {
      "field": "intent",
      "type": "enum",
      "constraints": "必须为 simplify"
    }
  ],
  "output_contract": {
    "format": "markdown-body",
    "required_sections": [
      "full_chapter_content"
    ],
    "limits": [
      "长度建议原文 60%-80%",
      "禁止删核心结论",
      "禁止新增事实"
    ]
  },
  "risk_notes": [
    "压缩过度导致信息损失"
  ],
  "assumptions": [
    "replace 模式由上层保证一致执行"
  ],
  "complexity": {
    "scope": 2,
    "dependency": 2,
    "risk": 2,
    "ambiguity": 2,
    "total": 8,
    "mode": "lean"
  }
}
